{
  "name": "kasse",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:pos": "yarn workspace @kasse/pos dev",
    "dev:admin": "yarn workspace @kasse/admin dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "android:open": "yarn workspace @kasse/pos android:open",
    "db:migrate": "supabase migration up --db-url $DATABASE_URL",
    "postinstall": "turbo run build --filter=@kasse/core --filter=@kasse/ui"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.1.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
